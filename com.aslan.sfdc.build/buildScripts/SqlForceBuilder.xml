
<project default="SqlForce" name="build">

	<import file="config.xml" />
	
	<target name="SqlForce" depends="jar">
	</target>
	 
	<target name="jar">

		<jar destfile="${config.release.home}/SqlForce.jar" filesetmanifest="mergewithoutmain">
			
            <manifest>
                <attribute name="Main-Class" value="com.aslan.sfdc.sqlforce.SQLForce"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <zipfileset excludes="META-INF/*.SF" src="${config.release.home}/partner.jar"/>

            <fileset dir="${config.root}/com.aslan.parser.commandline/bin"/>
            <fileset dir="${config.root}/com.aslan.sfdc.sqlforce/bin"/>
            
		</jar>
		
	</target>
</project>
